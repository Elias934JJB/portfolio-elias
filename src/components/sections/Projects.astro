---
import Section from "../Section.astro";
---

<Section className={Astro.props.className} title="Projets">
	<div class="space-y-4 py-3">
		<div class="flex items-baseline gap-8">
			<div class="relative items-baseline justify-between gap-2">
				<h3 class="mr-6 items-baseline gap-x-2 gap-y-0.5 font-medium">
					<a href="/portfolio-elias/CV.pdf.pdf" target="_blank" class="hover:text-skin-hue group flex items-center gap-[6px] text-skin-base decoration-dotted underline-offset-[5px] hover:underline">
						Mon CV
					</a>
				</h3>
				<p class="text-sm text-skin-muted">Téléchargez mon CV au format PDF</p>
			</div>
			<div class="relative items-baseline justify-between gap-2">
				<h3 class="mr-6 items-baseline gap-x-2 gap-y-0.5 font-medium">
					<a href="/portfolio-elias/mon-travail" target="_blank" rel="noopener noreferrer" class="hover:text-skin-hue group flex items-center gap-[6px] text-skin-base decoration-dotted underline-offset-[5px] hover:underline">
						Mon travail
					</a>
				</h3>
				<p class="text-sm text-skin-muted">Découvrez mes réalisations</p>
			</div>
		</div>
		<!-- Vous pourrez ajouter d'autres projets ici plus tard -->
	</div>
</Section> 