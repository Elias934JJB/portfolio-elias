---
import Layout from "@/layouts/Layout.astro";
import VeilleTechnologique from "@/components/sections/VeilleTechnologique.astro";
import { basics } from "@cv";
const { name } = basics;
---

<Layout title={`${name} - Veille Technologique`}>
	<main class="relative max-w-7xl p-8 md:p-16 bg-skin-fill min-h-screen">
		<a href="/" class="inline-block mb-8 rounded-lg bg-skin-hue px-4 py-2 text-white font-semibold shadow hover:bg-skin-hue/90 transition-colors">← Retour à l'accueil</a>
		<VeilleTechnologique />
	</main>
</Layout>

<style>
	main {
		margin: auto;
		width: 100%;
		background: var(--color-bg, #fff);
		border-radius: 1.5rem;
		box-shadow: 0 4px 32px 0 rgba(0,0,0,0.07);
	}
</style> 