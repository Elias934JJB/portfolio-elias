---
import Layout from "@/layouts/Layout.astro";

import About from "@/components/sections/About.astro";
import Education from "@/components/sections/Education.astro";
import Experience from "@/components/sections/Experience.astro";
import Hero from "@/components/sections/Hero.astro";
import Projects from "@/components/sections/Projects.astro";
import Skills from "@/components/sections/Skills.astro";
import Tail from "@/components/sections/Tail.astro";
import KeyboardManager from "@/components/KeyboardManager.astro";
import ThemeSwitch from "@/components/ThemeSwitch.astro";

import { basics } from "@cv";
const { name, label } = basics;
---

<Layout title={`${name} Portafolio - ${label}`}>
	<main class="relative grid max-w-7xl gap-12 p-8 max-sm:py-16 md:grid-cols-6 md:p-16 xl:gap-24 print:max-w-none print:grid-cols-1 print:gap-6">
		<div class="space-y-6 md:col-span-2 print:col-span-1 print:grid print:grid-cols-2 print:gap-5 print:space-y-0">
			<Hero />
			<About />
			<ThemeSwitch />
		</div>
		<div class="space-y-12 md:col-span-4 print:col-span-1 print:grid print:grid-cols-4 print:gap-2 print:space-y-0">
			<Experience className="print:col-span-3" />
			<Projects className="print:hidden" />
			<Skills className="print:hidden" />
			<Education className="order-first" />
		</div>
		<Tail />
	</main>

	<div class="flex flex-wrap gap-4 justify-center my-8">
		<a href="/portfolio-elias/mon-travail" class="px-6 py-3 rounded-lg bg-skin-hue text-white font-semibold shadow hover:bg-skin-hue/90 transition-colors">Mon Travail</a>
		<a href="/portfolio-elias/stage" class="px-6 py-3 rounded-lg bg-skin-hue text-white font-semibold shadow hover:bg-skin-hue/90 transition-colors">Stages IRIS</a>
		<a href="/portfolio-elias/veille" class="px-6 py-3 rounded-lg bg-skin-hue text-white font-semibold shadow hover:bg-skin-hue/90 transition-colors">Veille Technologique</a>
		<a href="/portfolio-elias/CV.pdf.pdf" class="px-6 py-3 rounded-lg bg-skin-hue text-white font-semibold shadow hover:bg-skin-hue/90 transition-colors" target="_blank">Mon CV (PDF)</a>
	</div>

	<KeyboardManager />
</Layout>

<style>
	@page {
		size: auto;
		margin: 0mm;
	}
	main {
		margin: auto;
		width: 100%;
	}
</style>
